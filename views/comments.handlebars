<div class="container">
    <div class="row">
        <div class="col s12">
            {{!--Article title as a link to story--}}
            <h2><a href="{{article.link}}" target="_blank">{{article.title}}</a></h2>
        </div>
        <hr>
        <div class="col s12">
            <h4>Comments</h4>
            {{!--If no comments associated, display this message--}}
            {{#unless article.comment}}
                <p>There are no comments for this article. Add a comment below.</p>
            {{/unless}}
        </div>
        <div class="col s12">
            {{!--Comments associated with article--}}
            <ul class="collection">
                {{#each article.comment}}
                <li class="collection-item">
                    <div>
                        {{!--option to delete any comment--}}
                        <button class="btn-flat delete-btn" data-id="{{this._id}}">X</button> {{this.body}}
                        <em class="secondary-content grey-text">{{this.name}}</em>
                    </div>
                </li>
                {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <h4>Add Your Comment</h4>
            {{!--form to post new comments--}}
            <form class="col s12" method="POST" action="/{{article._id}}">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="name" type="text" class="validate" name="name" required>
                        <label for="name">Name</label>
                    </div>
                    <div class="col s6"></div>
                    <div class="input-field col s12">
                        <textarea id="comment" class="materialize-textarea" name="body" required></textarea>
                        <label for="comment">Message</label>
                    </div>
                    <div class="col s12">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit<i class="material-icons right">send</i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>